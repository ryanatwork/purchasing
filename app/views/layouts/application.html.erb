<!DOCTYPE html>
<html>
<head>
  <title>Purchasing</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'compiled/print.css', :media => 'print' %>
  <!--[if IE]><%= stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection' %><![endif]-->

</head>
<body>

  <div id="wrapper">

    <div id="header_wrapper">

      <div id="header">
        <h1>Purchasing System</h1> 
		<h2>- Mange bids, quotes and proposals</h2>
        <div class="clear"></div>
      </div>

      <div id="links">

        <div class="left">
         	<ul>
				
				<li><%= link_to "Solicitations", solicitations_path %></li>
				<li><%= link_to "Contacts", contacts_path %></li>
				<li><%= link_to "Bid Types", bid_types_path %></li>

			</ul>
        </div>

        <div class="right">
          
        </div>

        <div class="clear"></div>

      </div>

    </div>

    <div id="content_wrapper">

      <div id="sidebar">
       
      </div>

      <div id="content">
        <%= yield :layout %>
      </div>

      <div class="clear"></div>

    </div>

    <div id="footer_wrapper">

      <div id="footer">
        
      </div>

    </div>

  </div>

</body>

</html>

